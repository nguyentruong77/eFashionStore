@model eFashionStore.Models.HoaDon
@{
    ViewBag.Title = "UpdateOrder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Edit Order</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","HomeAdmin")">Home</a></li>
                <li class="breadcrumb-item active">Edit order</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section dashboard" style="background-color: white; padding: 20px; border-radius: 20px; box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
        @using (Html.BeginForm("UpdateOrder", "CustomerAdmin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaHD)
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaKH)

            <div class="form-group">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInputName" name="MaNV" value="@ViewBag.MaNV" readonly />
                    <label for="floatingInputName" class="form-label">Employee code: </label>
                </div>
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.NgayDatHang, new { @class = "form-control", @id = "floatingInputImage", @required = "required", @readonly = "readonly" })
                @Html.Label("Order date:", new { @class = "form-label" })
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.DiaChiGiaoHang, new { @class = "form-control", @id = "floatingDescriptionInput", @placeholder = "Enter address", @minlength = "1" })
                @Html.Label("Shipping address:", new { @class = "form-label" })
                @Html.ValidationMessageFor(model => model.DiaChiGiaoHang, "Please enter address!", new { @class = "text-danger" })
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.TongGiaTri, new { @class = "form-control", @id = "floatingDescriptionInput", @readonly = "readonly" })
                @Html.Label("Total amount:", new { @class = "form-label" })
            </div>

            <div class="form-floating mb-3">
                @Html.DropDownListFor(model => model.TrangThaiTT, new SelectList(
                    new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Paid", Value = "true" },
                        new SelectListItem { Text = "Unpaid", Value = "false" }
                    }, "Value", "Text"), new { @class = "form-select", @id = "floatingStatusSelect" })
                @Html.Label("Payment Status:", new { @class = "form-label" })
                @Html.ValidationMessageFor(model => model.TrangThaiTT, "Please select Payment Status!", new { @class = "invalid-feedback" })
            </div>

            <div class="form-floating mb-3">
                @Html.DropDownListFor(model => model.TrangThaiDH, new SelectList(
                    new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Processing", Value = "0" },
                        new SelectListItem { Text = "On delivery", Value = "1" },
                        new SelectListItem { Text = "Delivered", Value = "2" }
                    }, "Value", "Text"), new { @class = "form-select", @id = "floatingStatusSelect" })
                @Html.Label("Order status:", new { @class = "form-label" })
                @Html.ValidationMessageFor(model => model.TrangThaiDH, "Please select order Status!", new { @class = "invalid-feedback" })
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.NgayNhanHang, new { @class = "form-control", @id = "floatingInputName", @type = "date", @required = "required" })
                @Html.Label("Date of receipt:", new { @class = "form-label" })
                @Html.ValidationMessageFor(model => model.NgayNhanHang, "Please date of receipt", new { @class = "invalid-feedback" })
                @if (ViewBag.ErrorDate != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorDate
                    </div>
                }
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.MaCoupon, new { @class = "form-control", @id = "floatingDescriptionInput", @readonly = "readonly" })
                @Html.Label("Coupon code:", new { @class = "form-label" })
            </div>

            <div class="d-grid gap-2 col-6 mx-auto">
                <button class="btn btn-primary" type="submit">Save and change</button>
            </div>
        </div>
        }

        <a href="@Url.Action("ListOrder","CustomerAdmin")" style="text-decoration:none;font-size:15px;color:black;margin-left:20px;">
            <i class="fa-solid fa-backward"></i>  Back to list
        </a>
    </section>
</main>


