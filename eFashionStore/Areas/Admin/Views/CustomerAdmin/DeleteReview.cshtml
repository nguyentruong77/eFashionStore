@model eFashionStore.Models.DanhGia

@{
    ViewBag.Title = "DeleteReview";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>View Delete Review</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("ListReview","CustomerAdmin")">Home</a></li>
                <li class="breadcrumb-item active">View delete review</li>
            </ol>
        </nav>
    </div>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>DanhGia</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Product code")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaSP)
            </dd>

            <dt>
                @Html.DisplayName("Customer name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NguoiDung.HoTen)
            </dd>

            <dt>
                @Html.DisplayName("Rating")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoSao)
            </dd>

            <dt>
                @Html.DisplayName("Comment")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BinhLuan)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "ListReview")
            </div>
        }
    </div>
</main>