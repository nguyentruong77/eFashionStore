@model eFashionStore.Models.Coupon
@{
    ViewBag.Title = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Edit Coupon code</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","HomeAdmin")">Home</a></li>
                <li class="breadcrumb-item active">Edit Coupon code</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section dashboard" style="background-color: white; padding: 20px; border-radius: 20px; box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
        @using (Html.BeginForm("UpdateCP", "ProductAdmin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaCoupon)

                <div class="form-floating mb-3">
                    @Html.TextBoxFor(model => model.GiamGia, new { @class = "form-control", @id = "floatingInputName", placeholder = "Enter % discount", @required = "required", type = "number", min = "1", max = "100", step = "1" })
                    @Html.Label("% Discount: ", new { @class = "form-label" })
                    @Html.ValidationMessageFor(model => model.GiamGia, "Please enter  % discount!", new { @class = "invalid-feedback" })
                </div>

                <div class="d-grid gap-2 col-6 mx-auto">
                    <button class="btn btn-primary" type="submit">Save and change</button>

                </div>
            </div>
        }
        <a href="@Url.Action("ListCP", "ProductAdmin")" style="text-decoration:none;font-size:15px;color:black;margin-left:20px;">
            <i class="fa-solid fa-backward"></i>  Back to list
        </a>
    </section>
</main>



