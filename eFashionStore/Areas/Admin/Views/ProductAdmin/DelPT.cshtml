@model eFashionStore.Models.LoaiSP

@{
    ViewBag.Title = "DelPT";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>View Delete Product Type</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("ListPT","CustomerAdmin")">Home</a></li>
                <li class="breadcrumb-item active">View Delete order</li>
            </ol>
        </nav>
    </div>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Product type</h4>
        <hr />
        <dl class="dl-horizontal">
            <th>
                @Html.DisplayName("Product type code")
            </th>
            <dd>
                @Html.DisplayFor(model => model.MaLoai)
            </dd>

            <th>
                @Html.DisplayName("Product Type Name")
            </th>
            <dd>
                @Html.DisplayFor(model => model.TenLoai)
            </dd>

            <th>
                @Html.DisplayName("Image")
            </th>

            <dd>
                @Html.DisplayFor(model => model.Hinh)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "ListPT")
            </div>
        }
    </div>
</main>
