@model eFashionStore.Models.Coupon

@{
    ViewBag.Title = "DelCP";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>View Delete Coupon Code</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("ListCP","ProductAdmin")">Home</a></li>
                <li class="breadcrumb-item active">View delete Coupon code</li>
            </ol>
        </nav>
    </div>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Coupon code</h4>
        <hr />
        <dl class="dl-horizontal">
            <th>
                @Html.DisplayName("Coupon code")
            </th>
            <dd>
                @Html.DisplayFor(model => model.MaCoupon)
            </dd>

            <th>
                @Html.DisplayName("% discount")
            </th>
            <dd>
                @Html.DisplayFor(model => model.GiamGia)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "ListCP")
            </div>
        }
    </div>
</main>
