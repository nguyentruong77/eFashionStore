<link href="https://fonts.gstatic.com" rel="preconnect">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
<div class="wrapper">
    <div class="container_fullwidth">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="checkout-page">
                        <ol class="checkout-steps">
                            <li class="steps active">
                                <a class="step-title">
                                    FlatShop
                                </a>
                                <div class="step-description">
                                    <div class="row">

                                        <div class="col-md-6 col-sm-6">
                                            <div class="run-customer">
                                                <h5>
                                                    Login
                                                </h5>
                                                @using (Html.BeginForm("Login", "Account", new { returnurl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "row g-3 needs-validation", @novalidate = "novalidate" }))
                                                {
                                                    <div class="col-12">
                                                        @Html.Label("Username:", null, new { @class = "form-label" })
                                                        @Html.TextBox("TenTaiKhoan", null, new { @class = "form-control", @id = "yourUsername", @required = "required", @placeholder = "Enter username" })
                                                        @if (ViewBag.UserNameError != null)
                                                        {
                                                            <span class="badge badge-danger" style="color:red">@ViewBag.UserNameError</span>
                                                        }
                                                    </div>
                                                    <div class="col-12">
                                                        @Html.Label("Password:", null, new { @class = "form-label" })
                                                        @Html.Password("MatKhau", null, new { @class = "form-control", @id = "yourPassword", @required = "required", @placeholder = "Enter password" })
                                                        @if (ViewBag.UserPassError != null)
                                                        {
                                                            <span class="badge badge-danger" style="color:red">@ViewBag.UserPassError</span>
                                                        }
                                                    </div>
                                                    <br />
                                                    <div class="col-12">
                                                        <button class="btn btn-primary w-100" type="submit">Login</button>
                                                    </div>
                                                    <div>
                                                        @if (ViewBag.ThieuThongTin != null)
                                                        {
                                                            <span class="badge badge-danger" style="color:red">@ViewBag.ThieuThongTin</span>
                                                        }
                                                    </div>
                                                    <div class="col-12">
                                                        <p class="small mb-0">ForgotPassword? <a href="@Url.Action("ForgotPassword","Account")">Reset</a></p>
                                                        <br />
                                                        <br />
                                                        <p class="small mb-0">Create new account? @Html.ActionLink("Register", "Register", "Account")</p>

                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>

                        </ol>
                    </div>
                </div>
            </div>
            <div class="clearfix">
            </div>
            <div class="our-brand">
            </div>
            <div class="our-brand">
            </div>
            <div class="our-brand">
            </div>
        </div>
    </div>

</div>