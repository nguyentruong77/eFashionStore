<link href="https://fonts.gstatic.com" rel="preconnect">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
<div class="wrapper">
    <div class="container_fullwidth">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="checkout-page">
                        <ol class="checkout-steps">
                            <li class="steps active">
                                <a class="step-title">
                                    FlatShop
                                </a>
                                <div class="step-description">
                                    <div class="row">

                                        <div class="col-md-6 col-sm-6">
                                            <div class="run-customer">
                                                <h5>
                                                    ForgotPassword
                                                </h5>
                                                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "row g-3 needs-validation", @novalidate = "novalidate" }))
                                                {
                                                    <div class="col-12">
                                                        @Html.Label("Email:", null, new { @class = "form-label" })
                                                        @Html.TextBox("Email", null, new { @class = "form-control", @id = "Email", @type = "email", @required = "required", @placeholder = "Enter email" })
                                                        @if (ViewBag.FailedRecovery != null)
                                                        {
                                                            <span class="badge badge-danger" style="color:red">@ViewBag.FailedRecovery</span>
                                                        }
                                                    </div>
                                                    <div class="col-12">
                                                        <button class="btn btn-primary w-100" type="submit">Submit</button>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>

                        </ol>
                    </div>
                </div>
            </div>
            <div class="clearfix">
            </div>
            <div class="our-brand">
            </div>
            <div class="our-brand">
            </div>
            <div class="our-brand">
            </div>
        </div>
    </div>

</div>